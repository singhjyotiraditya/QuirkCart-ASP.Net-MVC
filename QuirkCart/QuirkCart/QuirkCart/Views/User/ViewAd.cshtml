@model QuirkCart.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>

    * {
        font-family: Poppins !important;
    }


    .row {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 30px;
    }

    .col {
        text-align: center;
    }

    img {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 15px;
        box-shadow: 0px 10px 39px -17px rgba(0,0,0,0.1);
    }

    h1 {
        margin-bottom: 10px;
    }



    .accordion {
        max-width: 400px;
        margin: auto;
    }

    .accordion-item {
        border-bottom: 1px solid #ddd;
    }

        .accordion-item:last-child {
            border-bottom: none;
        }

    .accordion-heading {
        background-color: white;
        padding: 10px;
        cursor: pointer;
        font-size: 20px;
        font-weight: 600;

    }

    .accordion-body {
        display: none;
        padding: 10px;
        background-color: white;
        font-size: 20px;
    }

        .accordion-body img{
            border-radius: 50%;
        }

        .accordion-body.active {
            display: block;
        }


    .btn-purple-moon {
        background: #4e54c8;
        background: -webkit-linear-gradient(to right, #8876f3, #5942ee);
        background: linear-gradient(to right, #8876f3, #5942ee);
        color: #fff;
        border-radius: 15px !important;
        padding: 12px 20px !important;
        margin-top: 10px;
    }



        .btn-purple-moon:hover {
            color: white !important;
        }




</style>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row" style="margin: 30px">
        <div class="col">
            <img src="@Url.Content(@Model.pro_image)" style="width:800px" />
        </div>
        <div class="col" style="margin: 30px 165px">
            <div style="margin-bottom: 50px">
                <h1>@Model.pro_name @*<small>AD-ID:@Model.pro_id</small>*@</h1>
            </div>
            <div style="margin-bottom: 50px">
                <p>@Model.pro_des</p>
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <div class="accordion-heading">
                        Price
                    </div>
                    <div class="accordion-body active">
                        &#x20b9;
                        @Model.pro_price
                    </div>
                </div>
                <div class="accordion-item">
                    <div class="accordion-heading">
                        Category
                    </div>
                    <div class="accordion-body">
                        @Model.cat_name
                    </div>
                </div>
                <div class="accordion-item">
                    <div class="accordion-heading">
                        Posted by
                    </div>
                    <div class="accordion-body">
                         <div class="profile-image">
                        <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /></div>&#x40; @Model.u_name
                    </div>
                </div>
                <div class="accordion-item">
                    <div class="accordion-heading">
                        Contact
                    </div>
                    <div class="accordion-body">
                        +91 @Model.u_contact
                    </div>
                </div>
                <div class="accordion-item">
                    <div class="accordion-heading">
                        @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                        {
                            @Html.ActionLink("Close this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const accordionHeadings = document.querySelectorAll('.accordion-heading');

        accordionHeadings.forEach(heading => {
            heading.addEventListener('click', function () {
                const body = this.nextElementSibling;
                if (body && body.classList.contains('accordion-body')) {
                    const isActive = body.classList.contains('active');
                    const accordionBodies = document.querySelectorAll('.accordion-body');
                    accordionBodies.forEach(body => {
                        body.classList.remove('active');
                    });
                    if (!isActive) {
                        body.classList.add('active');
                    }
                }
            });
        });
    });
</script>

