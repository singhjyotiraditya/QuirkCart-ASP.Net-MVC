@model QuirkCart.Models.tbl_user

@{
    Layout = null;
}


<style>
    *{
        font-family: Poppins;
    }

    #box {
        border: 0px solid black;
        
    }

    #main-div {
        background-size: 100% 900px;
    }

    .insidebox {
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }

    .insidebox h1 {
        color: black;
        font-weight: 600;
    }

    .input-group-addon {
        background-color: #f3f1ff !important;
        border: 0px !important;
    }

    .form-control {
        background-color: #f3f1ff !important;
        border: 0px !important;
    }

    .form-group{
        display: flex;
        justify-content: center;
    }

    .btn-purple-moon {
        background: #4e54c8;
        background: -webkit-linear-gradient(to right, #8876f3, #5942ee); 
        background: linear-gradient(to right, #8876f3, #5942ee);
        color: #fff;
        border-radius: 15px !important;
        padding: 12px 20px !important;
        margin-top: 10px;
    }

 

    .btn-purple-moon:hover{
        color: white !important;
    }

    btn:focus{
        outline: none;
    }


</style>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (@Html.BeginForm())
        {
            <div class="insidebox">
                <div><h1>LOGIN</h1>
                </div>




                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.u_email) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                        @*<asp:TextBox ID="txtpassword" runat="server" class="form-control" placeholder="Password" TextMode="Password" required="required"></asp:TextBox>*@
                        @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Password" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.u_password) </span>
                </div>


                <div class="form-group">
                    @*<asp:Button ID="Button1" runat="server" Text="Log In" class="form-control  btn-success" OnClick="Button1_Click" OnClientClick="retrun(passwordmatchfunc())" />*@
                    <input type="submit" value="Login as a User" class="btn btn-purple-moon" />

                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
