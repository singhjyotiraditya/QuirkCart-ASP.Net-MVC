@using PagedList.Mvc
@model  PagedList.IPagedList<QuirkCart.Models.tbl_product>

@{
    ViewBag.Title = "Ads";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    .cimg {
        -webkit-transform 5s;
        transition: transform 5s;
    }

    .na1 {
        text-decoration: none;
        color: white;
    }

        .na1:hover {
            color: white;
        }

    .btn-purple-moon {
        background: #4e54c8;
        background: -webkit-linear-gradient(to right, #8876f3, #5942ee);
        background: linear-gradient(to right, #8876f3, #5942ee);
        color: #fff;
        border-radius: 7px !important;
        padding: 8px 20px !important;
        margin-left: 4px;
    }

    .form-control {
        background-color: #f3e7ff !important;
        border: 0px !important;
        border-radius: 5px;
        padding: 8px 12px;
    }



        .btn-purple-moon:hover {
            color: white !important;
        }

    .pagination .active a {
        background-color: black !important;
        border: 0px;
        border-radius: 8px !important;
        transition: transform 0.3s ease-in-out;
    }

        .pagination .active a:hover {
            transform: scale(1.1);
        }

</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                @*<img src="~/Content/img/Modern-e-Commerce-Web-Design-Trends.-Part-2.gif" style="width:100%; height:100%" />*@


            </div>

        </div>



        <div class="row" style="margin-bottom:40px">

            <div class="col-lg-2 col-md-2">
                @*<img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style="width:100%; height:100%" />*@
            </div>

                    <div class="col-lg-8 col-md-8">

                        @using (@Html.BeginForm("Ads", "User"))
                        {
                            <div class="navbar-form ">
                                <div class="form-group">

                                    <input type="text" class="form-control" placeholder="Search" name="search" id="search">
                                </div>
                                <button type="submit" class="btn btn-purple-moon">Search</button>
                            </div>
                        }



                        <div class="row">
                            @{int x = 0;}
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    x++;
                                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">

                                        <img class="img img-responsive cimg" src="@Url.Content(item.pro_image)" style="  width:100% ;border-radius:17px" />
                                        <div style="display: inline-block; margin-top: 10px; width: 100%; padding: 10px; background-color: #674cb5; border-radius: 10px; color: white">
                                            <h4 style="color:#808080; font-family:Poppins;text-align:center"> @Html.ActionLink(@item.pro_name, "ViewAd", new { id = @item.pro_id }, htmlAttributes: new { @class = "na1 na" })</h4>
                                        </div>
                                        </div>

                                        }
                                        }

                                        <h4 style="font-family: Poppins !important; color: #a5a5a5">@x Results found</h4>
                                    </div>
                    </div>


                    <div class="col-lg-2 col-md-2">
                        @*<img src="~/Content/img/LOB_val_600.gif" class="img img-responsive" style="width:100%; height:100%" />*@
                    </div>





                </div>


            </div>

            <div id="container" style="margin-left: 20px">
                <p></p>
                <p></p>
                <div class="pagination" style="margin-left: 400px">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Ads", new { page }))
                </div>
            </div>
        </body>
        </html>
