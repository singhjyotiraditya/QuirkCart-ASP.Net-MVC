@using PagedList.Mvc
@model  PagedList.IPagedList<QuirkCart.Models.tbl_category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        *{
            font-family: Poppins;
        }
        .button {
            background: #4e54c8;
            background: -webkit-linear-gradient(to right, #8876f3, #5942ee);
            background: linear-gradient(to right, #8876f3, #5942ee);
            color: #fff;
            border-radius: 15px !important;
            padding: 12px 20px !important;
            margin-top: 50px;
            display: inline-block;
            text-decoration: none;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }


        a:hover{
            text-decoration: none;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container" style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


                @Html.ActionLink("+ Create a New Category", "Create","Admin", null, new { @class = "button" })


            </div>

        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.cat_image)" style=" width:100% ;border-radius:17px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.cat_name</h4>
                        <div style="margin-left:160px">
                            @Html.ActionLink("Delete", "Delete", new { id = item.cat_id }, new { @class = "btn btn-danger btn-sm" })

                        </div>
                    </div>

                }
            }








        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
        </div>
    </div>
</body>
</html>
